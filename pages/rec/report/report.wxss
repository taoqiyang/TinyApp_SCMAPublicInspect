/* report.wxss */
@import "../../common/lib/weui.wxss";

.report-baseinfo {
  /* padding: 16rpx 28rpx 16rpx 28rpx; */
  background-color: white;
  /* margin-bottom: 32rpx; //没有地图时放开*/
  /* color: black; */
  font-size: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.report-desc {
  margin: 16rpx 28rpx 0 28rpx;
  width: auto;
  height: 160rpx;
}

.report-address {
  padding: 0rpx 20rpx 0rpx 20rpx;
  background-color: #f5f5f5;
  /* margin-top: 16rpx; */
  margin: 16rpx 28rpx 16rpx 28rpx;
  color: gray;
  font-size: 26rpx; 
  height: 46rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 22rpx;
  align-self: flex-start;
  max-width: 70%;
  border: 2rpx solid lightgray;
}

.report-map {
  width: auto;
  height: 260rpx;
}

.report-otherinfo {
  padding: 0rpx 30rpx 0rpx 30rpx;
  background-color: white;
  margin-bottom: 2rpx;
  /* color: black; */
  font-size: 30rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.report-icon {
  width: 48rpx;
  margin-right: 16rpx;
}

.report-submit-button {
  margin: 32rpx 48rpx 0rpx 48rpx;
}


.report-image-container {
  padding: 16rpx 28rpx 16rpx 28rpx;
  background-color: white;
  margin-top: 32rpx;
  color: gray;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  text-align: start;
}

.report-video-container {
  margin-top: 6rpx;
  display: flex;
  justify-content: center;
  background-color: white;
}

.report-video{
  width: 100%;
}

.report-video-text {
  color: black;
  padding: 16rpx 0 16rpx 0;
  width: 50%;
  text-align: center;
  font-size: 32rpx;
}
