/* news.wxss */

.news-item {
  display: flex;
  align-self: stretch;
  height: 172rpx;
  flex-flow: row nowrap;
  padding: 8rpx;
  background-color: #fff;
  margin-bottom: 12rpx;
}

.news-item-pic {
  height: 100%;
  flex: 7;
}

.news-item-info {
  display: flex;
  flex: 14;
  align-self: stretch;
  padding-left: 24rpx;
  padding-right: 4rpx;
  flex-flow: column nowrap;
  /* color: #ffffff; */
}

.news-item-info-title {
  font-size: 34rpx;
  margin-bottom: 22rpx;
  letter-spacing: 1rpx;
}

.news-item-info-content {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.news-focus-title {
  font-size: 27rpx;
  color: #fff;
  position: fixed;
  bottom: 0rpx;
  margin-left: 6rpx;
}

.news-focus-img {
  width: 100%;
  height: 100%;
  z-index: -1;
  display: inline;
}
