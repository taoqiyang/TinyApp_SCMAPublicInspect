/* rectype.wxss */

.rectype-container {
  align-items: stretch;
  justify-content: center;
}

.rectype-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.rectype-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
}

.rectype-img {
  height: 180rpx;
  width: 180rpx;
  border-radius: 90rpx;
  background-color: lightseagreen;
}

.rectype-name {
  font-size: 28rpx;
  margin-top: 8rpx;
}