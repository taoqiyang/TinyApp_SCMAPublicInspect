/* news.wxss */

.news-item {
  display: flex;
  align-self: stretch;
  height: 172rpx;
  flex-flow: row nowrap;
  align-items: stretch;
  padding: 8rpx;
  background-color: #fff;
  margin-bottom: 12rpx;
}

.news-item-pic {
  /* height: 100%; */
  height: auto;
  flex: 7;
}

.news-item-info {
  /* height: 100%; */
  display: flex;
  flex: 14;
  align-self: stretch;
  padding-left: 24rpx;
  padding-right: 4rpx;
  flex-flow: column nowrap;
  /* color: #ffffff; */
}

.news-item-meta-info {
  display: flex;
  flex: 1;
  align-self: stretch;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-end;
  color: darkgray;
  text-align: end;
  padding-right: 10rpx;
  font-size: 22rpx;
  /* margin-bottom: 2rpx; */
}

.news-item-info-title {
  display: -webkit-box;
  font-size: 34rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow:ellipsis;
}

.news-item-info-summary {
  display: -webkit-box;
  font-size: 26rpx;
  margin-top: 4rpx;
  color: gray;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow:ellipsis;
}

.news-focus-title {
  font-size: 27rpx;
  color: #fff;
  position: fixed;
  bottom: 0rpx;
  margin-left: 6rpx;
  letter-spacing: 2rpx;
}

.news-focus-img {
  width: 100%;
  height: 100%;
  z-index: -1;
  display: inline;
}
